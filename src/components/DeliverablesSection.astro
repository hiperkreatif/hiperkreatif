--- 
export interface Props {
  title?: string;
  deliverables: { title: string; items: string[] }[] | undefined;
}

const { title = "Deliverables", deliverables } = Astro.props;
---

{
  deliverables && deliverables.length > 0 && (
    <section class="bg-white rounded-2xl p-6 md:p-8 border-2 border-gray-100 mb-8">
      <div class="flex items-center justify-between gap-4 mb-6">
        <h2 class="text-2xl font-bold text-gray-900">{title}</h2>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {deliverables.map((deliverable) => (
          <div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">
              {deliverable.title}
            </h3>
            <ul class="space-y-3">
              {deliverable.items.map((item) => (
                <li class="flex gap-3 items-start">
                  <span
                    aria-hidden="true"
                    class="inline-block shrink-0 h-1.5 w-1.5 rounded-full bg-gray-900 translate-y-[7px]"
                  />
                  <span class="text-gray-800">{item}</span>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </section>
  )
}
