---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found">
  <main class="max-h-screen flex flex-col items-center justify-center p-6">
    <div class="max-w-2xl w-full p-8 text-center">
      <div class="text-9xl font-bold text-black-500 mb-4">404</div>
      <h1 class="text-4xl font-bold text-gray-800 mb-4">Oops! Page Not Found</h1>
      <p class="text-lg text-gray-600 mb-8">
        The page you're looking for doesn't exist or has been moved.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/"
          class="px-6 py-3 bg-black text-white font-medium rounded-lg hover:bg-gray-700 transition-colors shadow-md hover:shadow-lg"

        >
          Return to Home
        </a>
        <a
          href="#"
          class="px-6 py-3 border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 transition-colors"
        >
          Contact Support
        </a>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    text-align: center;
  }
</style>
